<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    tools:context=".Main2Activity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button

        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Workout with Kristina" />

    <Button
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:layout_gravity="end"
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Cycling With Greg" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textSize="18sp"
            android:text="@string/info_main" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button7"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="Reset" />

        <TextView
            android:id="@+id/resetTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="To reset this demo and view the First Play demo again please click on Reset"/>

    </LinearLayout>
</LinearLayout>